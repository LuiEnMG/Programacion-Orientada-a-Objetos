<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="gymposem509.controlador.MenuReportesController">
    <center>
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Generación de reportes" />

                <ComboBox fx:id="cbTipoReporte" promptText="Seleccione tipo de reporte" styleClass="button-primary" />

                <!-- HBox con Generar y Regresar -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnGenerar" styleClass="button-primary" text="Generar reporte" />
                        <Button fx:id="btnRegresar" styleClass="button-secundary" text="Regresar al menú de opciones" />
                    </children>
                </HBox>

                <Label fx:id="lblEstado" text="" />
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </center>
</BorderPane>
