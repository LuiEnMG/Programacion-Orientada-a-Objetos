<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="menu_inventario" prefHeight="557.0" prefWidth="750"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gymposem509.controlador.MenuInventarioController">

    <left>
        <VBox fx:id="menu_lateral" alignment="CENTER_LEFT" prefHeight="500.0" prefWidth="306.0"
              spacing="10" BorderPane.alignment="CENTER">

            <Label text="Opciones Inventario">
                <VBox.margin>
                    <Insets left="90.0" />
                </VBox.margin>
                <font>
                    <Font size="20.0" />
                </font>
            </Label>

            <Button fx:id="registrar" mnemonicParsing="false"
                    prefHeight="55.0" prefWidth="135.0"
                    styleClass="button-primary" text="Registrar Producto">
                <VBox.margin>
                    <Insets left="100.0" />
                </VBox.margin>
            </Button>

            <Button fx:id="actualizar" mnemonicParsing="false"
                    prefHeight="55.0" prefWidth="135.0"
                    styleClass="button-primary" text="Actualizar Producto">
                <VBox.margin>
                    <Insets left="100.0" top="15.0" />
                </VBox.margin>
            </Button>

            <Button fx:id="buscar" mnemonicParsing="false"
                    prefHeight="55.0" prefWidth="135.0"
                    styleClass="button-primary" text="Buscar Producto">
                <VBox.margin>
                    <Insets left="100.0" top="15.0" />
                </VBox.margin>
            </Button>

            <Button fx:id="eliminar" mnemonicParsing="false"
                    prefHeight="55.0" prefWidth="135.0"
                    styleClass="button-primary" text="Eliminar Producto">
                <VBox.margin>
                    <Insets left="100.0" top="15.0" />
                </VBox.margin>
            </Button>

            <Button fx:id="entradaSalida" mnemonicParsing="false"
                    prefHeight="55.0" prefWidth="170.0"
                    styleClass="button-primary" text="Entrada / Salida">
                <VBox.margin>
                    <Insets left="80.0" top="15.0" />
                </VBox.margin>
            </Button>

            <Button fx:id="salir" mnemonicParsing="false"
                    prefHeight="55.0" prefWidth="135.0"
                    styleClass="button-primary" text="Salir">
                <VBox.margin>
                    <Insets left="100.0" top="15.0" />
                </VBox.margin>
            </Button>

        </VBox>
    </left>

    <center>
        <VBox fx:id="contenido" alignment="CENTER_LEFT" prefHeight="500.0" prefWidth="420.0"
              spacing="10" />
    </center>

</BorderPane>